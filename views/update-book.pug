extends layout
block content

  h1 Update Book
   if errorMsg
      h2.error Oooops!
          ul.error
          each message in errorMsg
            li #{message}
  
  form.book-detail(method='POST', action=`/books/${Book.id}`)
    p
      label(for='title') Title
      input#title(name='title', type='text', value=`${errorMsg ? input.title : Book.title}`)
    p
      label(for='author') Author
      input#author(name='author', type='text', value=`${errorMsg ? input.author : Book.author}`)
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text', value=`${errorMsg ? input.genre : Book.genre}`)
    p
      label(for='year') Year
      input#year(name='year', type='text', value=`${errorMsg ? input.year : Book.year}`)
    p
      input#update(type='submit', value='Update Book')
  form(method='post', action=`/books/${Book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/books') Cancel
    p
      input(type='submit', value='Delete Book')
