extends layout
block content

  h1 New Book
  form(method='POST' action='/books/new')
    if errorMsg
      h2.error Oooops!
          ul.error
          each message in errorMsg
            li #{message}
    p
      label(for='title') Title
      input#title(name='title', type='text' value=`${errorMsg ? input.title : ''}`)
    p
      label(for='author') Author
      input#author(name='author', type='text' value=`${errorMsg ? input.author : ''}`)
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text' value=`${errorMsg ? input.genre : ''}`)
    p
      label(for='year') Year
      input#year(name='year', type='text' value=`${errorMsg ? input.year : ''}`)
    p
      input(type='submit', value='Create New Book')
    p
      a.button(href='/books') Cancel
